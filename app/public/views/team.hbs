<div class="row">
	<div class="col col-lg-4 leftBar" >
		<h1 class="Three-Dee">{{{title}}}</h1>

		<div class="presentationText">
		<p class="ptext">{{paragraph}}</p>
		</div>

		<h2 style="text-align:left; text-indent:25px;"><b>My Team:</b></h2>
		<div class="row">
			{{#each person}}

			<div class="ppldiv col col-sm-4">

				<a href="{{url}}" style="">

					<img class="pplpic" src="{{image}}"/>
					
				</a>

				<p>{{name}}</p>

			</div>
			
			{{/each}}
		</div>
	</div>

	<div class="col col-lg-8">

		<div class="bigImage">
			<a href="{{url}}" target="_blank">
				<img src="{{imgsrc}}" class="presentation" style="margin-bottom:0px"data-href="{{url}}" >
				<div style="text-align:center;"><b style="font-size:30px;">Click Me!</b></div>
			</a>

		</div>

		
		
	</div>

</div>

